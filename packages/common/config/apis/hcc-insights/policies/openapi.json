          },
          "403": {
            "description": "Individual permissions missing to complete action"
          },
          "404": {
            "description": "Policy not found"
          }
        },
        "summary": "Delete a single policy for a customer by its id",
        "tags": [
          "Policy Crud Service"
        ]
